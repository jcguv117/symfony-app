
{% block body %}
    <h1>Products</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idproduct</th>
                <th>ProductName</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.idproduct }}</td>
                <td>{{ product.productName }}</td>
                <td>{{ product.price }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('app_products_show', {'idproduct': product.idproduct}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('app_products_edit', {'idproduct': product.idproduct}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_products_new') }}">Create new</a>
{% endblock %}
