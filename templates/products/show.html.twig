{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
<div class="container w-50 my-4">
    <h1>Product #{{ product.idproduct }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Idproduct</th>
                <td>{{ product.idproduct }}</td>
            </tr>
            <tr>
                <th>ProductName</th>
                <td>{{ product.productName }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex flex-row justify-content-between">
        <a class="btn btn-secondary" href="{{ path('app_products_index') }}">back to list</a>
        <div class="d-flex flex-row">
            <a class="btn btn-warning mx-2" href="{{ path('app_products_edit', {'idproduct': product.idproduct}) }}">edit</a>
            {{ include('products/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
